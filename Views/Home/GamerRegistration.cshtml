@model GameTournament.Models.Gamer
@{
    ViewBag.Title = "GamerRegistration";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>

    <!-- Required meta tags -->

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/css/profileview.css" />
    <!-- Add icon library -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Hello, world!</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,200;0,300;0,500;0,600;0,900;1,200;1,400&display=swap" rel="stylesheet">

    <title>Hello, world!</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
    </style>
</head>

<body>



    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>

    <div class="container-fluid" style="height:100vh">
        <div class="row bg-transparent" style="height:100vh">
            <div class="col-sm-7" style="padding:0">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="height:100vh">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/Content/image/pubg 1.jpg" class="d-block w-100 " alt="..." style="height:100vh">
                        </div>
                        <div class="carousel-item">
                            <img src="/Content/image/pubg 2.jpg" class="d-block w-100 " alt="..." style="height:100vh">
                        </div>
                        <div class="carousel-item">
                            <img src="/Content/image/viper.jpg" class="d-block w-100 " alt="..." style="height:100vh">
                        </div>
                        <div class="carousel-item">
                            <img src="/Content/image/fortnite.jpg" class="d-block w-100 " alt="..." style="height:100vh">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-sm-5 my-auto ">
                <h1 id="header_tag" class="text-center">
                    You Will be Signed In As Organizer Gamer
                </h1>

                <div class="container">









                    <form action="@Url.Action("Create","Gamers")" method="POST" >

                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label for="fname">Name  :</label>
                            <input type="text" class="form-control" id="Gamernameinput" name="GamerName" aria-describedby="emailHelp" placeholder="Enter Name">
                            @Html.ValidationMessageFor(model => model.GamerName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="E-mail">E-mail  :</label>
                            <input type="email" class="form-control" id="Gamermailinput" name="Email" aria-describedby="emailHelp" placeholder="Enter email">
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="InGameName">In Game Name :</label>
                            <input type="text" class="form-control" id="gameringamename" name="InGameName" aria-describedby="emailHelp" placeholder="enter in game name">
                            @Html.ValidationMessageFor(model => model.InGameName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="GamerNumber">Contact Number :</label>
                            <input type="tel" class="form-control" id="Gamercontactinput" name="ContactNumber" aria-describedby="emailHelp" placeholder="enter contact number">
                            @Html.ValidationMessageFor(model => model.ContactNumber, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="lname">Passward :</label>
                            <input type="password" class="form-control" id="Gamerpassinput" name="Passward" aria-describedby="emailHelp" placeholder="enter passward">
                            @Html.ValidationMessageFor(model => model.Passward, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="lname">Team Name :</label>
                            <input type="text" class="form-control" id="Gamerteamnameinput" name="Teamname" aria-describedby="emailHelp" placeholder="enter team name">
                            @Html.ValidationMessageFor(model => model.Teamname, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <select name="Prefferedgame" id="Prefferedgame">
                                <option value="Apex">Apex</option>
                                <option value="Pubg Mobile">Pubg Mobile</option>
                                <option value="Valorent">Valorent</option>
                                <option value="Fortnite">Fortnite</option>
                            </select>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-4 py-2">Submit</button>

                        </div>



                    </form>


                </div>



            </div>


        </div>

    </div>
    

</body>

</html>



