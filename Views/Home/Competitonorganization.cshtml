@model GameTournament.Models.Competition
@{
    ViewBag.Title = "Competitonorganization";
    Layout = null;
}


<!doctype html>
<html lang="en">
<head>

    <!-- Required meta tags -->

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/css/profileview.css" />
    <!-- Add icon library -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Hello, world!</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,200;0,300;0,500;0,600;0,900;1,200;1,400&display=swap" rel="stylesheet">

    <title>Hello, world!</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
    </style>
</head>

<body>



    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>

    <div class="container-fluid" style="height:100vh">
        <div class="row bg-light" style="height:100vh">
            <div class="col-sm-7" style="padding:0">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="height:100vh">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/Content/image/pubg 1.jpg" class="d-block w-100 " alt="..." style="height:100vh">
                        </div>
                        <div class="carousel-item">
                            <img src="/Content/image/pubg 2.jpg" class="d-block w-100 " alt="..." style="height:100vh">
                        </div>
                        <div class="carousel-item">
                            <img src="/Content/image/viper.jpg" class="d-block w-100 " alt="..." style="height:100vh">
                        </div>
                        <div class="carousel-item">
                            <img src="/Content/image/fortnite.jpg" class="d-block w-100 " alt="..." style="height:100vh">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-sm-5 my-auto ">
                <h1 id="header_tag" class="text-center">
                    You Will be Signed In As Organizer
                </h1>

                <div class="container">


                    <form action="@Url.Action("Create","Competitions")" method="POST" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label for="fname">Competition Name  :</label>
                            <input type="text" class="form-control" name="CompetitionName" aria-describedby="emailHelp" placeholder="Enter Name">
                            @Html.ValidationMessageFor(model => model.CompetitionName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Organizerid, "Organizer id", htmlAttributes: new { @class = "" })
                            @Html.DropDownList("Organizerid", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Organizerid, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="OrganizerNumber">Tournament deadline :</label>
                            <input type="date" class="form-control" name="tournamentdeadline" aria-describedby="emailHelp" placeholder=" enter registration fee ">
                            @Html.ValidationMessageFor(model => model.tournamentdeadline, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="OrganizerNumber">Total Team :</label>
                            <input type="number" class="form-control" name="totalteams" aria-describedby="emailHelp" placeholder=" enter registration fee ">
                            @Html.ValidationMessageFor(model => model.totalteams, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="OrganizerNumber">Registation Fee :</label>
                            <input type="number" class="form-control" name="Registrationfee" aria-describedby="emailHelp" placeholder=" enter registration fee ">
                            @Html.ValidationMessageFor(model => model.Registrationfee, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <div class="form-group">
                                <select name="GameName" id="Prefferedgame">
                                    <option value="Apex">Apex</option>
                                    <option value="Pubg Mobile">Pubg Mobile</option>
                                    <option value="Valorent">Valorent</option>
                                    <option value="Fortnite">Fortnite</option>
                                </select>
                                @Html.ValidationMessageFor(model => model.GameName, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <div class="form-group">
                            <label for="lname">Google Form Link :</label>
                            <input type="url" class="form-control" name="googleformlink" id="googleformlinkinput" aria-describedby="emailHelp" placeholder="enter google form link">
                            @Html.ValidationMessageFor(model => model.googleformlink, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="lname">Discord Server Link :</label>
                            <input type="url" class="form-control" name="Discordserverlink" id="competitionserverlinkinput" aria-describedby="emailHelp" placeholder="enter discord server link">
                            @Html.ValidationMessageFor(model => model.Discordserverlink, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" name="imageFile" id="customFile" accept="image/*">
                                <label class="custom-file-label" for="customFile">Choose file</label>
                            </div>


                            <script>
                                $(".custom-file-input").on("change", function () {
                                    var fileName = $(this).val().split("\\").pop();
                                    $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
                                });
                            </script>
                        </div>


                        <div class="text-center mb-2">
                            <button type="submit" class="btn btn-primary px-4 py-2">Create</button>
                        </div>



                    </form>

                </div>



            </div>


        </div>

    </div>


</body>

</html>
